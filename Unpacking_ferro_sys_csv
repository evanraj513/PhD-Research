            R_sys.t = ticker*names[name_a]*R_sys.dt
            fig,ax = R_sys.plot_line('E','y' )
        
            line1 = ax.get_lines()[0]
            ax121.plot(line1.get_data()[0], line1.get_data()[1],'--',label = name_a)
       
        ax121.set_title('Plots of varying algorithms')
        ax121.legend()
        
